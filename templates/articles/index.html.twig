{% extends 'base.html.twig' %}
{% block title %}SymphArt Articles{% endblock %}

{% block body %}
  <h1>Articles</h1>

  {% if articleList %}
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Date</th>
        </tr>      
      </thead>

      <tbody>
        {% for article in articleList %}
          <tr>        
            <td>{{ article.name }}</td>
            <td>{{ article.date }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endif %}
{% endblock %}
